<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    android:label="@string/fragment_create_predefined_task_label"
    app:startDestination="@id/nav_tasks">
    <fragment
        android:id="@+id/nav_tasks"
        android:name="de.janniqz.sustainabilitytracker.ui.tasks.TasksFragment"
        android:label="@string/fragment_tasks_label"
        tools:layout="@layout/fragment_tasks">
        <action
            android:id="@+id/action_createTask"
            app:destination="@id/nav_create_task" />
    </fragment>
    <fragment
        android:id="@+id/nav_statistics"
        android:name="de.janniqz.sustainabilitytracker.ui.statistics.StatisticsFragment"
        android:label="@string/fragment_statistics_label"
        tools:layout="@layout/fragment_statistics" />
    <fragment
        android:id="@+id/nav_create_task"
        android:name="de.janniqz.sustainabilitytracker.ui.tasks.CreateTaskFragment"
        android:label="@string/fragment_create_task_label"
        tools:layout="@layout/fragment_create_task">
        <action
            android:id="@+id/action_createPredefinedTask"
            app:destination="@id/nav_create_predefined_task" />
    </fragment>
    <fragment
        android:id="@+id/nav_create_predefined_task"
        android:name="de.janniqz.sustainabilitytracker.ui.tasks.CreatePredefinedTaskFragment"
        android:label="@string/fragment_create_predefined_task_label"
        tools:layout="@layout/fragment_create_predefined_task" >
        <action
            android:id="@+id/action_returnToTaskOverview"
            app:destination="@id/nav_tasks"
            app:popUpTo="@id/nav_tasks"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>