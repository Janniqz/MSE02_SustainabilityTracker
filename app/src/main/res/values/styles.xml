<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TaskCategorySelection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="selectionRequired">true</item>
        <item name="singleSelection">true</item>
    </style>

    <style name="TaskCategoryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="TaskCategoryButton.Compact" parent="TaskCategoryButton">
        <item name="iconGravity">textStart</item>
    </style>

    <style name="TextInputBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextInputBox.Padding" parent="TextInputBox">
        <item name="android:paddingTop">18dp</item>
    </style>
</resources>